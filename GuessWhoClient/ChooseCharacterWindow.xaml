    <Grid Cursor="Hand">
        <Image x:Name="imgBackground"
               Source="/Images/mainMenu.jpeg"
               Stretch="UniformToFill"
               Panel.ZIndex="0">
            <Image.Effect>
                <BlurEffect Radius="5"/>
            </Image.Effect>
        </Image>

