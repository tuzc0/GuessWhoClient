<Window x:Class="GuessWhoClient.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessWhoClient"
        xmlns:localization="clr-namespace:GuessWhoClient.Globalization"
        mc:Ignorable="d"
        Title="{Binding [AppTitle], Source={x:Static localization:LocalizationProvider.Instance}}"
        Width="800"
        SizeToContent="Height"
        MinHeight="450">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/PixelTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource Brush.Bg}" Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource Brush.Panel}" CornerRadius="16" Padding="12" Margin="0,0,0,20">
            <Viewbox Stretch="Uniform" MaxHeight="72">
                <TextBlock Style="{StaticResource Txt.Pixel}"
                           Text="{Binding [AppTitle], Source={x:Static localization:LocalizationProvider.Instance}}"
                           Foreground="{StaticResource Brush.Accent}"/>
            </Viewbox>
        </Border>

        <Border Grid.Row="1" Background="{StaticResource Brush.Card}" CornerRadius="16" Padding="24" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Txt.Pixel}"
                           Text="{Binding [LblEmail], Source={x:Static localization:LocalizationProvider.Instance}}"
                           FontSize="18" VerticalAlignment="Center"
                           HorizontalAlignment="Right" Margin="0,0,10,0"/>
                <TextBox x:Name="txtEmail" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource Txt.Pixel}"
                           Text="{Binding [LblUser], Source={x:Static localization:LocalizationProvider.Instance}}"
                           FontSize="18" VerticalAlignment="Center"
                           HorizontalAlignment="Right" Margin="0,0,10,0"/>
                <TextBox x:Name="txtDisplayName" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource Txt.Pixel}"
                           Text="{Binding [LblPassword], Source={x:Static localization:LocalizationProvider.Instance}}"
                           FontSize="18" VerticalAlignment="Center"
                           HorizontalAlignment="Right" Margin="0,0,10,0"/>
                <PasswordBox x:Name="txtPassword" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource Txt.Pixel}"
                           Text="{Binding [LblConfirmPassword], Source={x:Static localization:LocalizationProvider.Instance}}"
                           FontSize="18" VerticalAlignment="Center"
                           HorizontalAlignment="Left" Margin="-16,0,0,0" Width="156"/>
                <PasswordBox x:Name="txtConfirmPassword" Grid.Row="3" Grid.Column="1" Margin="0,5"/>
            </Grid>
        </Border>

        <Button x:Name="btnCreateAccount" Grid.Row="2"
                Content="{Binding [BtnCreateAccount], Source={x:Static localization:LocalizationProvider.Instance}}"
                Style="{StaticResource Btn.Primary}" Height="48" Width="200"
                HorizontalAlignment="Center"
                Click="BtnCreateAccount_Click"/>
    </Grid>
</Window>
