<Window x:Class="GuessWhoClient.FriendManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Friend Manager"
        Height="600" Width="950"
        WindowStartupLocation="CenterScreen"
        Cursor="Hand">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/PixelTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Definimos Brush.Bg2 para DataGrids -->
            <SolidColorBrush x:Key="Brush.Bg2" Color="#2C3E50"/>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Fondo con blur y overlay -->
    <Grid>
        <Image x:Name="imgBackground"
               Source="/Images/mainMenu.jpeg"
               Stretch="UniformToFill"
               Panel.ZIndex="0">
            <Image.Effect>
                <BlurEffect Radius="5"/>
            </Image.Effect>
        </Image>

        <Rectangle x:Name="rectOverlay"
                   Fill="{StaticResource Brush.Bg}"
                   Opacity="0.6"
                   Panel.ZIndex="1"/>

        <!-- Contenedor principal -->
        <Border x:Name="brdMainContainer"
                CornerRadius="20"
                Background="#34495E"
                Padding="25"
                Margin="20"
                BorderBrush="#3498DB"
                BorderThickness="2"
                Panel.ZIndex="2">

            <Grid Background="{StaticResource Brush.Bg}" Opacity="0.88" Margin="-25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0"
                           Text="FRIEND MANAGER"
                           Style="{StaticResource Txt.Pixel}"
                           Foreground="{StaticResource Brush.Accent}"
                           FontSize="32"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Contenido principal: Profiles + Friends -->
                <Grid Grid.Row="1" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Profiles -->
                    <GroupBox Header="Profiles" Grid.Column="0">
                        <DockPanel>
                            <DataGrid x:Name="DgProfiles"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      Background="{StaticResource Brush.Bg2}"
                                      Foreground="{StaticResource Brush.Accent}"
                                      FontFamily="Consolas">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="UserId" Binding="{Binding UserId}" />
                                    <DataGridTextColumn Header="Username" Binding="{Binding DisplayName}" Width="*"/>
                                    <DataGridTextColumn Header="AccountId" Binding="{Binding AccountId}" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="4">
                                <Button Content="Send Request" Width="140" Style="{StaticResource Btn.Primary}" Click="BtnSendRequest_Click"/>
                            </StackPanel>
                        </DockPanel>
                    </GroupBox>

                    <!-- Friends -->
                    <GroupBox Header="Friends" Grid.Column="1">
                        <DockPanel>
                            <DataGrid x:Name="DgFriends"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Background="{StaticResource Brush.Bg2}"
                                      Foreground="{StaticResource Brush.Accent}"
                                      FontFamily="Consolas">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="UserId" Binding="{Binding UserId}" />
                                    <DataGridTextColumn Header="Username" Binding="{Binding DisplayName}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </GroupBox>
                </Grid>

                <!-- Pending Requests -->
                <GroupBox Header="Pending Requests" Grid.Row="2" Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid x:Name="DgRequests"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  Background="{StaticResource Brush.Bg2}"
                                  Foreground="{StaticResource Brush.Accent}"
                                  FontFamily="Consolas">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="RequestId" Binding="{Binding FriendRequestId}" />
                                <DataGridTextColumn Header="From" Binding="{Binding FromUserId}" />
                                <DataGridTextColumn Header="To" Binding="{Binding ToUserId}" />
                                <DataGridTextColumn Header="Status" Binding="{Binding StatusName}" Width="*"/>
                                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
                            <Button Content="Accept" Width="100" Style="{StaticResource Btn.Primary}" Click="BtnAccept_Click"/>
                            <Button Content="Reject" Width="100" Margin="0,8,0,8" Style="{StaticResource Btn.Primary}" Click="BtnReject_Click"/>
                            <Button Content="Cancel (Mine)" Width="100" Style="{StaticResource Btn.Primary}" Click="BtnCancel_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </Border>
    </Grid>
</Window>
