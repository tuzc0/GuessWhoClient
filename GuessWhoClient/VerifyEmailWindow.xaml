<Window x:Class="GuessWhoClient.VerifyEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verificar correo" Height="220" Width="380"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        SnapsToDevicePixels="True" TextOptions.TextRenderingMode="Aliased"
        Background="{StaticResource Brush.Bg}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/PixelTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="Input.Pixel" TargetType="TextBox">
                <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
                <Setter Property="Background" Value="{StaticResource Brush.Card}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="CaretBrush" Value="{StaticResource Brush.TextLight}"/>
                <Setter Property="SelectionBrush" Value="{StaticResource Brush.Accent}"/>
            </Style>

            <Style x:Key="Txt.Pixel.Small" TargetType="TextBlock" BasedOn="{StaticResource Txt.Pixel}">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Opacity" Value="0.85"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="16">
        <Border Background="{StaticResource Brush.Panel}" CornerRadius="12" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="txtInfo"
                           Grid.Row="0"
                           Style="{StaticResource Txt.Pixel}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"
                           Text="Te enviamos un código de 6 dígitos a tu correo."/>

                <TextBox x:Name="txtCode"
                         Grid.Row="1"
                         Style="{StaticResource Input.Pixel}"
                         Width="160" 
                         MaxLength="6"
                         VerticalContentAlignment="Center"
                         PreviewTextInput="TxtCode_PreviewTextInput"/>

                <TextBlock x:Name="txtStatus"
                           Grid.Row="3"
                           Style="{StaticResource Txt.Pixel.Small}"
                           Margin="0,10,0,6"/>

                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center" Margin="0,0,0,0" Width="323">

                    <Button x:Name="btnVerify"
                            Style="{StaticResource Btn.Primary}"
                            Content="VERIFICAR"
                            Width="120"
                            Click="BtnVerify_Click"
                            Margin="20,0,20,0"/>

                    <Button x:Name="btnResend"
                            Style="{StaticResource Btn.Primary}"
                            Background="{StaticResource Brush.Card}"
                            Foreground="{StaticResource Brush.TextLight}"
                            Content="REENVIAR"
                            Width="110"
                            Click="BtnResend_Click"
                            Margin="20,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>