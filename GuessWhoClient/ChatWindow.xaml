<Window x:Class="GuessWhoClient.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- TextBox para mostrar mensajes -->
        <TextBox Name="txtChat" Grid.Row="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" />

        <!-- Panel para escribir y enviar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox Name="txtMessage" Width="300" Height="25" Margin="0,0,5,0"/>
            <Button Content="Enviar" Width="75" Click="BtnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
