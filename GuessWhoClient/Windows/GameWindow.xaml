<Window x:Class="GuessWhoClient.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessWhoClient.Windows"
        mc:Ignorable="d"
        Title="Guess Who"
        Height="720" Width="1120"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Image x:Name="imgBackground"
               Source="/Images/mainMenu.jpeg"
               Stretch="UniformToFill">
            <Image.Effect>
                <BlurEffect Radius="5"/>
            </Image.Effect>
        </Image>

        <Rectangle Fill="#80000000"/>

        <Border CornerRadius="20"
                Background="#34495E"
                Padding="40"
                Margin="100"
                BorderBrush="#E74C3C"
                BorderThickness="2">

            <Grid Background="{StaticResource Brush.Bg}"
                  Opacity="0.88"
                  Margin="-70,-72,-64,-77">

                <Grid x:Name="ScreenHost"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" />

                <Grid x:Name="OverlayHost"
                      Background="#80000000"
                      Visibility="Collapsed">
                    <ContentControl x:Name="OverlayContent"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
