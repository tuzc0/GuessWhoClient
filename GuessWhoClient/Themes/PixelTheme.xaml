    <Style x:Key="Icon.Gear" TargetType="Path">
        <Setter Property="Data" Value="{StaticResource Geo.Icon.Settings}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="28"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Fill" 
                Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <Geometry x:Key="Geo.Icon.ChatBubble">
        M4,4 h14 a2,2 0 0 1 2,2 v7 a2,2 0 0 1 -2,2 h-6 l-4,4 v-4 h-2
    a2,2 0 0 1 -2,-2 v-7 a2,2 0 0 1 2,-2 z
    </Geometry>

    <Style x:Key="Icon.Chat.Outline" TargetType="Path">
        <Setter Property="Data" Value="{StaticResource Geo.Icon.ChatBubble}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="28"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="Stroke"
            Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}, FallbackValue={StaticResource Brush.TextLight}}"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeLineJoin" Value="Round"/>
        <Setter Property="StrokeStartLineCap" Value="Round"/>
        <Setter Property="StrokeEndLineCap" Value="Round"/>
    </Style>

    <Style x:Key="Icon.Chat.Filled" TargetType="Path" BasedOn="{StaticResource Icon.Chat.Outline}">
        <Setter Property="Fill"
            Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}, FallbackValue={StaticResource Brush.TextLight}}"/>
        <Setter Property="Stroke" Value="Transparent"/>
    </Style>

