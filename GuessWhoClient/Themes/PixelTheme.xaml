<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Clr.Bg">#0E2B3C</Color>
    <Color x:Key="Clr.Panel">#1C4A63</Color>
    <Color x:Key="Clr.Card">#2A607C</Color>
    <Color x:Key="Clr.Accent">#F39C12</Color>
    <Color x:Key="Clr.AccentDark">#C87F0A</Color>
    <Color x:Key="Clr.TextLight">#FFF3E0</Color>

    <SolidColorBrush x:Key="Brush.Bg" Color="{StaticResource Clr.Bg}"/>
    <SolidColorBrush x:Key="Brush.Panel" Color="{StaticResource Clr.Panel}"/>
    <SolidColorBrush x:Key="Brush.Card" Color="{StaticResource Clr.Card}"/>
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Clr.Accent}"/>
    <SolidColorBrush x:Key="Brush.AccentDark" Color="{StaticResource Clr.AccentDark}"/>
    <SolidColorBrush x:Key="Brush.TextLight" Color="{StaticResource Clr.TextLight}"/>

    <FontFamily x:Key="Font.Pixel">pack://application:,,,/Assets/Fonts/#Press Start 2P</FontFamily>

    <Style x:Key="Txt.Pixel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="Aliased"/>
    </Style>

    <Style x:Key="Input.Pixel" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
        <Setter Property="Background" Value="{StaticResource Brush.Card}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CaretBrush" Value="{StaticResource Brush.TextLight}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource Brush.Accent}"/>
    </Style>

    <Style x:Key="Input.Pixel.Password" TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
        <Setter Property="Background" Value="{StaticResource Brush.Card}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CaretBrush" Value="{StaticResource Brush.TextLight}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource Brush.Accent}"/>
    </Style>


    <Style x:Key="Txt.Pixel.Small" TargetType="TextBlock" BasedOn="{StaticResource Txt.Pixel}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>

    <Style x:Key="Btn.Primary" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource Brush.Bg}"/>
        <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="4"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource Brush.AccentDark}"/>
                            <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
                        </Trigger>
   
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.9"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Btn.Secondary" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
        <Setter Property="Background" Value="{StaticResource Brush.Panel}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="4"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource Brush.Card}"/>
                            <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.9"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Chk.Pixel" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="VerticalAlignment" Value="Center"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Border x:Name="CheckboxBox"
                                Width="18"
                                Height="18"
                                Margin="0,0,8,0"
                                Background="{StaticResource Brush.Panel}"
                                BorderBrush="{StaticResource Brush.Accent}"
                                BorderThickness="2">
                            <Path x:Name="CheckMark"
                                  Data="M2,8 L6,12 L14,2"
                                  Stroke="{StaticResource Brush.TextLight}"
                                  StrokeThickness="2"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Visibility="Collapsed"/>
                        </Border>

                        <ContentPresenter VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckboxBox" Property="Background"
                                    Value="{StaticResource Brush.Card}"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


