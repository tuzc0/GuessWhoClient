<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Clr.Bg">#0E2B3C</Color>
    <Color x:Key="Clr.Panel">#1C4A63</Color>
    <Color x:Key="Clr.Card">#2A607C</Color>
    <Color x:Key="Clr.Accent">#F39C12</Color>
    <Color x:Key="Clr.AccentDark">#C87F0A</Color>
    <Color x:Key="Clr.TextLight">#FFF3E0</Color>

    <SolidColorBrush x:Key="Brush.Bg" Color="{StaticResource Clr.Bg}"/>
    <SolidColorBrush x:Key="Brush.Panel" Color="{StaticResource Clr.Panel}"/>
    <SolidColorBrush x:Key="Brush.Card" Color="{StaticResource Clr.Card}"/>
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Clr.Accent}"/>
    <SolidColorBrush x:Key="Brush.AccentDark" Color="{StaticResource Clr.AccentDark}"/>
    <SolidColorBrush x:Key="Brush.TextLight" Color="{StaticResource Clr.TextLight}"/>

    <FontFamily x:Key="Font.Pixel">pack://application:,,,/Assets/Fonts/#Press Start 2P</FontFamily>

    <Style x:Key="Txt.Pixel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextLight}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="Aliased"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Padding" Value="8,6"/>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Padding" Value="8,6"/>
    </Style>

    <Style x:Key="Btn.Primary" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource Brush.Bg}"/>
        <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font.Pixel}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="4"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource Brush.AccentDark}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.9"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
