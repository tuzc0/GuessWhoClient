<Window x:Class="GuessWhoClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="635" Width="720">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/PixelTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="0,0,0,-6" 
          Background="{StaticResource Brush.Bg}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{StaticResource Brush.Panel}" 
                CornerRadius="16" 
                Padding="12">

            <Viewbox Stretch="Uniform" 
                     MaxHeight="72">

                <TextBlock Style="{StaticResource Txt.Pixel}"
                           Text="GUESS WHO?"
                           Foreground="{StaticResource Brush.Accent}"/>
            </Viewbox>
        </Border>

        <Border Grid.Row="2" 
                Background="{StaticResource Brush.Card}" 
                CornerRadius="16" 
                Padding="24" 
                Margin="0,194,0,20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Style="{StaticResource Txt.Pixel}" 
                           Text="User" 
                           FontSize="18" 
                           VerticalAlignment="Center"/>
                
                <TextBox x:Name="txtUser" 
                         Grid.Row="0" 
                         Grid.Column="2"/>

                <TextBlock Grid.Row="2" 
                           Grid.Column="0" 
                           Style="{StaticResource Txt.Pixel}" 
                           Text="Password" 
                           FontSize="18" 
                           VerticalAlignment="Center"/>
                
                <TextBox x:Name="txtPassword" 
                         Grid.Row="2" 
                         Grid.Column="2"/>

                <Button x:Name="btnLogin" 
                        Grid.Row="4" 
                        Grid.ColumnSpan="3"
                        Margin="0,8,0,0"
                        Content="Login"
                        Style="{StaticResource Btn.Primary}"
                        Height="48" 
                        Width="200"
                        HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,8">

            <TextBlock Style="{StaticResource Txt.Pixel}" 
           Text="Create account" 
           FontSize="20" 
           Cursor="Hand" 
           Margin="0,0,8,0"
           MouseLeftButtonUp="CreateAccount_Click"/>


            <TextBlock Style="{StaticResource Txt.Pixel}" 
                       Text="•" 
                       Margin="4,0"/>
            
            <TextBlock Style="{StaticResource Txt.Pixel}" 
                       Text="I forgot my password" 
                       FontSize="20" 
                       Cursor="Hand" 
                       Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
