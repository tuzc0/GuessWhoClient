<UserControl x:Class="GuessWhoClient.MainMenuScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="30"
                Background="{StaticResource Brush.Bg}"
                Padding="40">
            
            <StackPanel Width="400">

                <TextBlock Text="GUESS WHO?"
                           Style="{StaticResource Txt.Pixel}"
                           Foreground="{StaticResource Brush.Accent}"
                           FontSize="64"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button x:Name="btnPlay"
                        Content="Play"
                        Style="{StaticResource Btn.Primary}"
                        Width="300" Height="80"
                        Margin="0,0,0,15"
                        Click="BtnPlay_Click"/>

                <Button x:Name="btnLeaderboards"
                        Content="Leaderboards"
                        Style="{StaticResource Btn.Primary}"
                        Width="300" Height="80"
                        Margin="0,0,0,15"/>

                <Button x:Name="btnProfile"
                        Content="Profile"
                        Style="{StaticResource Btn.Primary}"
                        Width="300" Height="80"
                        Margin="0,0,0,15"
                        Click="BtnProfile_Click"/>

                <Button x:Name="btnExit"
                        Content="Exit"
                        Style="{StaticResource Btn.Primary}"
                        Width="300" Height="80"
                        Margin="0,0,0,0"
                        Click="BtnExit_Click"/>

            </StackPanel>
        </Border>

        <Button x:Name="btnSettings"
                Style="{StaticResource Btn.Primary}"
                Width="64" Height="64"
                Foreground="{StaticResource Brush.Bg}"
                Margin="30,0,30,40"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Panel.ZIndex="3">
            <Path Style="{StaticResource Icon.Gear}"/>
        </Button>
    </Grid>
</UserControl>
