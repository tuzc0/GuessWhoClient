<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="GuessWhoClient.MainMenuWindow"
    Title="Main Menu"
    Height="720" Width="1120"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/PixelTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Cursor="Hand">
        <Image x:Name="imgBackground"
               Source="/Images/mainMenu.jpeg"
               Stretch="UniformToFill"
               Panel.ZIndex="0">
            <Image.Effect>
                <BlurEffect Radius="5"/>
            </Image.Effect>
        </Image>

        <Rectangle x:Name="rectOverlay"
                   Fill="{StaticResource Brush.Bg}"
                   Opacity="0.6"
                   Panel.ZIndex="1"/>

        <Border x:Name="brdMainMenuContainer"
                CornerRadius="20"
                Background="#34495E"
                Padding="40"
                Margin="100"
                BorderBrush="#E74C3C"
                BorderThickness="2"
                Panel.ZIndex="2">

            <Grid Background="{StaticResource Brush.Bg}" Opacity="0.88" Margin="-70,-72,-64,-77">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

                    <TextBlock Text="GUESS WHO?"
                               Style="{StaticResource Txt.Pixel}"
                               Foreground="{StaticResource Brush.Accent}"
                               FontSize="64"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"/>

                    <Button x:Name="btnPlay"
                            Content="Play"
                            Style="{StaticResource Btn.Primary}"
                            Width="300" Height="80"
                            Margin="0,0,0,15"/>

                    <Button x:Name="btnLeaderboards"
                            Content="Leaderboards"
                            Style="{StaticResource Btn.Primary}"
                            Width="300" Height="80"
                            Margin="0,0,0,15"/>

                    <Button x:Name="btnProfile"
                            Content="Profile"
                            Style="{StaticResource Btn.Primary}"
                            Width="300" Height="80"
                            Margin="0,0,0,15"
                            Click="btnProfile_Click"/>

                    <Button x:Name="btnExit"
                            Content="Exit"
                            Style="{StaticResource Btn.Primary}"
                            Width="300" Height="80"
                            Margin="0,0,0,0"/>

                </StackPanel>

                <Button x:Name="btnSettings"
                        Style="{StaticResource Btn.Primary}"
                        Width="64" Height="64"
                        Foreground="{StaticResource Brush.Bg}"
                        Margin="30,0,30,30"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Panel.ZIndex="3">
                    <Path Style="{StaticResource Icon.Gear}"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
